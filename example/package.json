{
  "name": "hazeljs-example",
  "version": "1.0.0",
  "description": "Example application using HazelJS",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:ci": "jest --coverage --coverageReporters=text --coverageReporters=lcov --coverageReporters=clover --no-coverage-threshold",
    "lint": "eslint \"src/**/*.ts\" --max-warnings 0",
    "lint:fix": "eslint \"src/**/*.ts\" --fix --max-warnings 0",
    "format": "prettier --write \"src/**/*.ts\"",
    "microservices:demo": "ts-node src/microservices/demo.ts",
    "microservices:user": "PORT=3001 ts-node src/microservices/user-service.ts",
    "microservices:order": "PORT=3002 ts-node src/microservices/order-service.ts",
    "microservices:gateway": "PORT=3003 ts-node src/microservices/api-gateway.ts",
    "microservices:redis-user": "PORT=3001 ts-node src/microservices/redis-example/user-service-redis.ts",
    "microservices:redis-order": "PORT=3002 ts-node src/microservices/redis-example/order-service-redis.ts",
    "rag:simple": "ts-node src/rag/simple-rag-example.ts"
  },
  "dependencies": {
    "@hazeljs/core": "file:../packages/core",
    "@hazeljs/config": "file:../packages/config",
    "@hazeljs/cache": "file:../packages/cache",
    "@hazeljs/prisma": "file:../packages/prisma",
    "@hazeljs/auth": "file:../packages/auth",
    "@hazeljs/ai": "file:../packages/ai",
    "@hazeljs/serverless": "file:../packages/serverless",
    "@hazeljs/swagger": "file:../packages/swagger",
    "@hazeljs/websocket": "file:../packages/websocket",
    "@hazeljs/discovery": "file:../packages/discovery",
    "@hazeljs/rag": "file:../packages/rag",
    "@prisma/client": "^6.8.2",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "jsonwebtoken": "^9.0.2",
    "reflect-metadata": "^0.2.1",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.12.0"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.24",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "axios": "^1.9.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "prisma": "^6.8.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
