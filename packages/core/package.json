  "description": "Core HazelJS framework - Dependency injection, routing, decorators, and base functionality",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest --coverage --passWithNoTests",
    "test:ci": "jest --coverage --coverageReporters=text --coverageReporters=lcov --coverageReporters=clover --no-coverage-threshold",
    "test:watch": "jest --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "dotenv": "^16.5.0",
    "reflect-metadata": "^0.2.2",
    "winston": "^3.17.0"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.50",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "supertest": "^7.1.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
