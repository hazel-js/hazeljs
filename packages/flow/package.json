{
  "name": "@hazeljs/flow",
  "version": "0.2.0-beta.47",
  "description": "Durable execution graph engine with Prisma persistence - workflow OS kernel",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "prisma generate && tsc && cp -r src/generated dist/",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "lint": "eslint \"src/**/*.ts\" --ignore-pattern \"src/generated/**\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix --ignore-pattern \"src/generated/**\"",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.17.50",
    "@vitest/coverage-v8": "^2.1.0",
    "prisma": "^6.8.2",
    "typescript": "^5.3.3",
    "vitest": "^2.1.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hazel-js/hazeljs.git",
    "directory": "packages/flow"
  },
  "keywords": ["hazeljs", "workflow", "flow", "execution-graph", "durable", "prisma"],
  "author": "Muhammad Arslan <muhammad.arslan@hazeljs.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
