{
  "name": "hazeljs",
  "version": "0.2.0-beta.34",
  "private": true,
  "description": "HazelJS monorepo - A modern, TypeScript-first Node.js framework",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:core && npm run build:tier1 && npm run build:tier2 && npm run build:tier3",
    "build:core": "npm run build --workspace=@hazeljs/core",
    "build:tier1": "npm run build --workspace=@hazeljs/cache --workspace=@hazeljs/config --workspace=@hazeljs/auth --workspace=@hazeljs/cron --workspace=@hazeljs/event-emitter --workspace=@hazeljs/grpc --workspace=@hazeljs/queue --workspace=@hazeljs/kafka --workspace=@hazeljs/prisma --workspace=@hazeljs/swagger --workspace=@hazeljs/websocket --workspace=@hazeljs/serverless --workspace=@hazeljs/discovery --workspace=@hazeljs/cli",
    "build:tier2": "npm run build --workspace=@hazeljs/ai --workspace=@hazeljs/rag --workspace=@hazeljs/pdf-to-audio --workspace=@hazeljs/messaging",
    "build:tier3": "npm run build --workspace=@hazeljs/agent",
    "build:packages": "npm run build --workspaces --if-present",
    "publish:all": "npm run publish:core && npm run publish:tier1 && npm run publish:tier2 && npm run publish:tier3",
    "publish:core": "npm publish --workspace=@hazeljs/core --access public --tag beta",
    "publish:tier1": "npm publish --workspace=@hazeljs/cache --workspace=@hazeljs/config --workspace=@hazeljs/auth --workspace=@hazeljs/cron --workspace=@hazeljs/event-emitter --workspace=@hazeljs/grpc --workspace=@hazeljs/queue --workspace=@hazeljs/kafka --workspace=@hazeljs/prisma --workspace=@hazeljs/swagger --workspace=@hazeljs/websocket --workspace=@hazeljs/serverless --workspace=@hazeljs/discovery --workspace=@hazeljs/cli --access public --tag beta",
    "publish:tier2": "npm publish --workspace=@hazeljs/ai --workspace=@hazeljs/rag --workspace=@hazeljs/pdf-to-audio --workspace=@hazeljs/messaging --access public --tag beta",
    "publish:tier3": "npm publish --workspace=@hazeljs/agent --access public --tag beta",
    "lerna:version": "lerna version --no-push --no-git-tag-version",
    "lerna:publish": "lerna publish from-package --dist-tag beta",
    "lerna:publish:latest": "lerna publish from-package",
    "version:patch": "lerna version patch --no-push",
    "version:minor": "lerna version minor --no-push",
    "version:major": "lerna version major --no-push",
    "test": "npm run test --workspaces --if-present",
    "test:ci": "npm run test:ci --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "prisma:generate": "ts-node scripts/migrate.ts generate",
    "prisma:migrate": "ts-node scripts/migrate.ts migrate",
    "prisma:studio": "ts-node scripts/migrate.ts studio",
    "prisma:reset": "ts-node scripts/migrate.ts reset",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:logs": "docker-compose logs -f"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hazel-js/hazeljs.git"
  },
  "keywords": [
    "hazeljs",
    "framework",
    "typescript",
    "nodejs",
    "monorepo"
  ],
  "author": "Muhammad Arslan <muhammad.arslan@hazeljs.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hazeljs/hazel-js/issues"
  },
  "homepage": "https://hazeljs.com",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/hazeljs"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/chalk": "^0.4.31",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.17.50",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lerna": "^8.2.4",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prisma": "^6.8.2",
    "reflect-metadata": "^0.2.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.32.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  }
}
