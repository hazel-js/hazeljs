{
  "name": "hazeljs",
  "version": "0.2.0",
  "private": true,
  "description": "HazelJS monorepo - A modern, TypeScript-first Node.js framework",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:core": "npm run build --workspace=@hazeljs/core",
    "build:packages": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:ci": "npm run test:ci --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "prisma:generate": "ts-node scripts/migrate.ts generate",
    "prisma:migrate": "ts-node scripts/migrate.ts migrate",
    "prisma:studio": "ts-node scripts/migrate.ts studio",
    "prisma:reset": "ts-node scripts/migrate.ts reset",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:logs": "docker-compose logs -f"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hazel-js/hazeljs.git"
  },
  "keywords": [
    "hazeljs",
    "framework",
    "typescript",
    "nodejs",
    "monorepo"
  ],
  "author": "Muhammad Arslan <marslan@hazeljs.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hazel-js/hazeljs/issues"
  },
  "homepage": "https://hazeljs.com",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/hazeljs"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/chalk": "^0.4.31",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.17.50",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prisma": "^6.8.2",
    "reflect-metadata": "^0.2.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.32.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  }
}
